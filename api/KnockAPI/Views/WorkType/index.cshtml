@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<IList<KnockAPI.Models.WorkType >>
@{
    Layout = "Views/Layout/Base.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">WorkTypes</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/user/new" class="btn btn-default">New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-8">WorkNature</th>
                        <th class="col-md-2">Category</th>
                        <th class="col-md-2">CreatedAt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-md-8">@item.WorkNature</td>
                            <td class="col-md-8">@item.Category </td>
                            <td class="col-md-2">@item.CreatedAt</td>
                            <td class="col-md-2">
                                <a href="/worktype/update/@item.WorkTypeId" class="btn btn-xs btn-primary">Edit</a>
                                <a href="/worktype/delete/@item.WorkTypeId" data-method="delete" class="btn btn-xs btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <a href="/" class="btn btn-default">Back</a>
        </div>
    </div>
</div>