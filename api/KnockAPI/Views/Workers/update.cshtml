@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<KnockAPI.Models.Worker>
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Layout/Base.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Edit worker</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/worker/update" method="post" class="form-horizontal">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="name">Name</label>
                        <input name="Name" value="@Model.Name" type="text" class="form-control" placeholder="Worker name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>