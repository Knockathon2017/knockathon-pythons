@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<IList<KnockAPI.Models.Worker>>
@{
    Layout = "Views/Layout/Base.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Workers</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/worker/new" class="btn btn-default">New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-md-8">Worker Name</th>
                        <th class="col-md-8">Age</th>
                        <th class="col-md-8">Sex</th>
                        <th class="col-md-8">Available</th>
                        <th class="col-md-8">Location</th>
                        <th class="col-md-8">Contact1</th>
                        <th class="col-md-8">Contact2</th>
                        <th class="col-md-2">Created at</th>
                        <th class="col-md-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-md-8">@item.FirstName @item.LastName</td>
                            <td class="col-md-8">@item.Age</td>
                            <td class="col-md-8">@item.Sex</td>
                            <td class="col-md-8">@(item.IsAvailable? "Yes": "No")</td>
                            <td class="col-md-8">@item.LocationKey</td>
                            <td class="col-md-8">@item.ContactNo1</td>
                            <td class="col-md-8">@item.ContactNo2</td>
                            <td class="col-md-2">@item.CreatedAt</td>
                            <td class="col-md-2">
                                <a href="/worker/update/@item.WorkerId" class="btn btn-xs btn-primary">Edit</a>
                                <a href="/worker/delete/@item.WorkerId" data-method="delete" class="btn btn-xs btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <a href="/" class="btn btn-default">Back</a>
        </div>
    </div>
</div>