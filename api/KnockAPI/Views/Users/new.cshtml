@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<KnockAPI.Models.User>
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Layout/Base.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">New Users</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/worker/new" method="post" class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="FirstName">First Name</label>
                        <input name="FirstName" value="@Model.FirstName" type="text" class="form-control" placeholder="User First Name">
                        <label for="LastName">Last Name</label>
                        <input name="LastName" value="@Model.LastName" type="text" class="form-control" placeholder="User Last Name">

                        <label for="Age">Age</label>
                        <input  name="Age" value="@Model.Age" type="text" class="form-control" placeholder="Age">

                        <label for="Sex">Sex</label>
                        <input name="Sex" value="@Model.Sex" type="text" class="form-control" placeholder="Sex">

                        <label for="Country">Country</label>
                        <input name="Country"   type="text" class="form-control" placeholder="Country">

                        <label for="Location">Location</label>
                        <input name="Location" value="@Model.Location" type="text" class="form-control" placeholder="Location">

                        <label for="Password">Password</label>
                        <input name="Password" value="@Model.Password" type="text" class="form-control" placeholder="Password">


                        <label for="Password">Confirm Password</label>
                        <input name="Confirm Password"   type="text" class="form-control" placeholder="Password">


                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>