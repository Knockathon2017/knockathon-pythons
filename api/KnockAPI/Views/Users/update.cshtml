@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<KnockAPI.Models.User>
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase
@{
    Layout = "Views/Layout/Base.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">Edit User</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form action="/user/update" method="post" class="form-horizontal">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="FirstName">First Name</label>
                        <input name="FirstName" value="@Model.FirstName" type="text" class="form-control" placeholder="User First Name">
                        <label for="LastName">Last Name</label>
                        <input name="LastName" value="@Model.LastName" type="text" class="form-control" placeholder="User Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>